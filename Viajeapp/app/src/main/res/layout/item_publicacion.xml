<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/nombreServicioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Servicio"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/categoriaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría" />

    <TextView
        android:id="@+id/costoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costo" />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción" />

    <!-- Botones Alineados Horizontalmente -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:layout_marginStart="16dp">

        <!-- Botón de Recomendaciones -->
        <ImageButton
            android:id="@+id/btn_pub_reco"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_reco2"
            android:background="@drawable/button_background_round"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/recomendaciones"
            app:tint="@android:color/white" />

        <!-- Botón de Reseñas -->
        <ImageButton
            android:id="@+id/btn_pub_resena"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_reco"
            android:background="@drawable/button_background_round"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/resenas"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/cantlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />


        <!-- Botón de Like -->
        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_like"
            android:background="@drawable/button_background_round"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/ic_like"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/cantdislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <!-- Botón de Dislike -->
        <ImageButton
            android:id="@+id/btn_dislike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_dislike"
            android:background="@drawable/button_background_round"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/ic_dislike"
            app:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>
