<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">  <!-- Agregado padding general -->

    <!-- Imagen de fondo -->

    <!-- Submen칰 y T칤tulo Publicaciones con icono de avioncito -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:scaleType="centerCrop"
        android:src="@drawable/tu_imagen_de_fondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Icono de avioncito -->
        <ImageView
            android:id="@+id/ivAvioncito"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_avioncito"
            android:layout_marginEnd="8dp"/>

        <!-- T칤tulo Publicaciones -->
        <TextView
            android:id="@+id/tvTituloPublicaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turismo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp"/>

        <!-- Spinner (submen칰 desplegable) -->
        <Spinner
            android:id="@+id/spinnerTipoPublicacion"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:prompt="@string/tipo_publicacion_prompt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

    <!-- CardView que contiene la informaci칩n de la publicaci칩n -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPublicaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling">

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="83dp"
        tools:ignore="MissingConstraints">

        <!-- Destino del viaje (T칤tulo) -->
        <TextView
            android:id="@+id/tvDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Destino: Parque Ghibli Japon"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Publicado por (usuario que recomienda el destino) -->
        <TextView
            android:id="@+id/tvPublicadoPor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Publicado por: keily Lopez"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- RecyclerView para mostrar varias im치genes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImagenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:orientation="horizontal"
            tools:listitem="@layout/item_imagen" />

        <!-- Bot칩n para subir imagen -->
        <Button
            android:id="@+id/btnSubirImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_500"
            android:text="Subir Imagen"
            android:textColor="@android:color/black" />

        <!-- Likes, Dislikes y Rese침as -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <!-- Likes -->
            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="游녨 15"
                android:textSize="14sp" />

            <!-- Dislikes -->
            <TextView
                android:id="@+id/tvDislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="游녩 3"
                android:textSize="14sp" />

            <!-- Rese침as -->
            <TextView
                android:id="@+id/tvRese침as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游눫 7"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Botones de interacci칩n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMeGusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/purple_500"
                android:text="Me gusta"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnNoMeGusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/purple_500"
                android:text="No me gusta"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnVerMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_500"
                android:text="Ver m치s"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Botones de acci칩n: Eliminar y Ver Rese침as -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Eliminar"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnVerRese침as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Ver rese침as"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>